<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DBapp.Controllers.addTransactionController">
   <content>
      <BorderPane>
         <bottom>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <TextField fx:id="productIDSearchField" promptText="Product ID" />
                        <ComboBox fx:id="nameSearchField" prefWidth="150.0" promptText="Product Name"  />
                        <ChoiceBox fx:id="productQuantityBox" prefHeight="25.0" prefWidth="61.0" />
                        <Button fx:id="addItemRowButton" mnemonicParsing="false" onMouseClicked="#addItemRowClicked" text="Add Item Row" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" />
                     </padding>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </HBox>
                  <ButtonBar buttonMinWidth="125.0">
                     <buttons>
                        <Button fx:id="deleteRowButton" mnemonicParsing="false" onMouseClicked="#deleteSelectedRowClicked" text="Delete Selected Row" />
                        <Button fx:id="submitTransactionButton" mnemonicParsing="false" onMouseClicked="#submitTransactionClicked" text="Submit Transaction" />
                     </buttons>
                  </ButtonBar>
               </children>
            </VBox>
         </bottom>
         <center>
            <TableView fx:id="table" minHeight="200.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="productIDTableColumn" prefWidth="75.0" text="Product ID" />
                <TableColumn fx:id="nameTableColumn" prefWidth="167.0" text="Name" />
                  <TableColumn fx:id="descriptionTableColumn" prefWidth="223.0" text="Description" />
                  <TableColumn fx:id="priceTableColumn" prefWidth="122.0" text="Price" />
                  <TableColumn fx:id="quantityTableColumn" onEditCommit="#commit" prefWidth="115.0" text="Quantity" />
              </columns>
            </TableView>
         </center>
         <top>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Pane prefHeight="59.0" prefWidth="595.0">
                     <children>
                        <Text layoutX="65.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text=" Customer ID: " />
                        <Text layoutX="65.0" layoutY="49.0" strokeType="OUTSIDE" strokeWidth="0.0" text="NOTE: If customer is new please add customer before making a new transaction." />
                        <TextField fx:id="customerID" layoutX="141.0" layoutY="10.0" promptText="Customer ID" />
                     </children>
                  </Pane>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Text layoutX="515.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Quote Status: " />
                        <ChoiceBox fx:id="quoteBox" prefWidth="150.0" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Invoice Status: " />
                        <ChoiceBox fx:id="invoiceBox" layoutX="486.0" layoutY="10.0" prefWidth="150.0" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </top>
      </BorderPane>
   </content>
</ScrollPane>
